{
  "name": "@spaceman/react-theme-animation",
  "version": "0.1.0",
  "description": "React theme switching with smooth view transition animations and multi-theme support",
  "keywords": [
    "react",
    "reactjs",
    "hooks",
    "theme",
    "animation",
    "switch",
    "typescript",
    "nextjs",
    "dark",
    "light",
    "view-transition",
    "tailwindcss",
    "shadcn"
  ],
  "homepage": "https://github.com/tonyedgal/spaceman-react-theme-animation#readme",
  "bugs": {
    "url": "https://github.com/tonyedgal/spaceman-react-theme-animation/issues"
  },
  "license": "MIT",
  "author": "tonyedgal",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc --module esnext --outDir dist/esm",
    "dev": "tsc --watch",
    "format": "prettier --write . --config ./.prettierrc",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix . --ext .{js,jsx,ts,tsx}",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  }
}
